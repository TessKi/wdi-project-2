<div>
  <h2><%= name %></h2>
  <div class="">
    <p><%= address %></p>
    <p><a href="<%= website %>" target="_blank">Website</a></p>
    <p>Capacity: <%= capacity %></p>
    <p>Closest Tube Station: <%= closestTube %></p>

    <div class="description">
      <p>Description:</p>
      <p><%= description %></p>
    </div>

  </div>
  <% if (locals.isLoggedIn) { %>
  <a href="/venues/<%= _id %>/edit">Edit this venue</a>

  <form action="/venues/<%= _id %>?_method=DELETE" method="post">
    <button>Delete this venue</button>
  </form>

  <div class="comments">
    <h3>Comments</h3>
    <% reviews.forEach(review => {  %>
      <div class=""><%= review.username %></div>
      <div class=""><%= review.title %></div>
      <div class=""><%= review.content %></div>
      <div class=""><%= review.rating %></div>
      <div class=""><%= review.image %></div>
      <div class=""><%= review.date %></div>
      <div class="">
        <form action="/venues/<%= _id %>/reviews/<%= review._id %>?_method=DELETE" method="post">
          <button>X</button>
        </form>
      </div>
    <% }) %>
  </div>

  <form class="" action="/venues/<%= _id %>/reviews" method="post">
    <h4>Add a comment</h4>
    <div class="">
      <input type="text" name="username" value="<%= locals.currentUser.username %>" type="hidden">
    </div>

    <div class="">
      <label for="title">Title</label>
      <input type="text" name="title">
    </div>

    <div class="">
      <label for="content">Content</label>
      <textarea name="content"></textarea>
    </div>

    <div class="">
      <label for="rating">Rating</label>
      <input type="number" name="rating" min="1" max="5">
    </div>

    <div class="">
      <label for="image">Image URL</label>
      <input type="text" name="image">
    </div>

    <button>Post comment</button>
  </form>
  <% } %>
</div>
